<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="horizontal"
  >

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
      android:id="@+id/linechart_view_top_leftmost_tv"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="right"
      android:textColor="#969696"
      android:textSize="17dp"
      tools:text="10"
      />

    <TextView
      android:id="@+id/linechart_view_bottom_leftmost_tv"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="50dp"
      android:gravity="right"
      android:textColor="#969696"
      android:textSize="17dp"
      tools:text="0"
      />
  </LinearLayout>

  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    >

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:visibility="gone"
      >

      <TextView
        android:id="@+id/linechart_view_top_left_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:text="Type"
        />

      <TextView
        android:id="@+id/linechart_view_top_right_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:gravity="right"
        android:text="-"
        android:textColor="@color/colorPrimary"
        />
    </LinearLayout>

    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="15dp"
      android:layout_marginTop="9dp"
      >

      <com.example.vito.linechartplayground.LineChartView
        android:id="@+id/line_linechart_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/chart_height"
        />

      <TextView
        android:id="@+id/linechart_view_loading_msg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        tools:text="Loading message"
        />
    </FrameLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >

      <TextView
        android:id="@+id/linechart_view_bottom_left_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:text="start"
        android:textColor="#969696"
        android:textSize="17dp"
        />

      <TextView
        android:id="@+id/linechart_view_bottom_right_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:gravity="right"
        android:textColor="#969696"
        android:textSize="17dp"
        tools:text="finish"
        />
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
      android:id="@+id/linechart_view_top_rightmost_tv"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textColor="#969696"
      android:textSize="17dp"
      tools:text="10"
      />

    <TextView
      android:id="@+id/linechart_view_bottom_rightmost_tv"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="50dp"
      android:text="0"
      android:visibility="gone"
      />
  </LinearLayout>
</LinearLayout>
